<%- include("./partials/header.ejs") -%>

<link rel="stylesheet" href="../css/map.css" />

<section id="map" style="display: none">
	<div class="mapContainer">
		<p
			style="
				display: block;
				font-size: 1.1rem;
				font-weight: 800;
				color: #777;
				text-align: center;
			"
		>
			Get In Touch With Us :
		</p>
		<div class="dropdown-divider"></div>
		<br />
		<div class="row">
			<div class="col-md-6">
				<form>
					<div class="row">
						<div class="form-group col-sm-6">
							<input
								style="height: 4rem"
								type="text"
								class="form-control form-control-lg"
								id="firstname"
								name="firstname"
								placeholder="Firstname *"
							/>
						</div>
						<div class="form-group col-sm-6">
							<input
								style="height: 4rem"
								type="text"
								class="form-control form-control-lg"
								id="lastname"
								name="lastname"
								placeholder="Lastname"
							/>
						</div>
						<div class="form-group col-lg-12">
							<input
								style="height: 4rem"
								type="text"
								class="form-control form-control-lg"
								id="email"
								name="email"
								placeholder="Email *"
							/>
						</div>
						<div class="form-group col-lg-12">
							<textarea
								rows="6"
								name="message"
								id="message"
								style="resize: none"
								class="form-control form-control-lg"
								placeholder="Type your message *"
							></textarea>
						</div>
					</div>
				</form>
			</div>
			<div class="col-md-6">
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d979.8079724213569!2d78.6920346009939!3d10.793543586410781!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x2b99df1341317950!2zMTDCsDQ3JzM2LjciTiA3OMKwNDEnMzIuMiJF!5e0!3m2!1sen!2sin!4v1640501808132!5m2!1sen!2sin"
					class="iframe"
					allowfullscreen="true"
					loading="lazy"
				></iframe>
			</div>
		</div>
	</div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="../js/contactmap.js"></script>

<%- include("./partials/footer.ejs") -%>
